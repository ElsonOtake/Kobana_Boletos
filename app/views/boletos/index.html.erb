<div class="is-flex is-justify-content-end">
  <%= link_to "Criar boleto",
              new_boleto_path,
              class: "button is-primary is-rounded mb-4",
              data: {
                controller: "modal",
                action: "modal#open",
                turbo_frame: "boleto_frame"
              }
  %>
</div>

<table class="table">
  <thead>
    <tr>
      <th><%= t(:customer_person_name) %></th>
      <th><%= t(:customer_cnpj_cpf) %></th>
      <th><%= t(:amount) %></th>
      <th><%= t(:expire_at) %></th>
      <th><%= t(:customer_address) %></th>
      <th><%= t(:customer_zipcode) %></th>
      <th><%= t(:customer_neighborhood) %></th>
      <th><%= t(:customer_city_name) %></th>
      <th><%= t(:customer_state) %></th>
      <th><%= t(:status) %></th>
    </tr>
  </thead>
  <tbody id="boletos">
    <% @boletos.each do |boleto| %>
      <%= render "bank_billet", boleto: boleto %>
    <% end %>
  </tbody>
</table>

<%= render "layouts/modal" %>
